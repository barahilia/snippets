# Shortcuts
alias md='mkdir'
alias rp='realpath'
alias bat='batcat'

# Customize builtins
alias ls='ls --color=auto'
alias ll='ls -lh'
alias la='ls -A'

alias df='df -h -x"squashfs"'
alias du='du -h'
alias free='free -h'
alias grep='grep --color=auto -i'
alias column='column -t'

# Personal mini-tools
alias cgrep='grep --color=force -i'
alias cuts='cut -d" "'
alias wcl='wc -l'
alias counter='sort | uniq -c'
alias split-space='tr " " "\n"'
alias header-nums='head -n1 | tr " " "\n" | nl'
alias cdiff='git diff --no-index'
